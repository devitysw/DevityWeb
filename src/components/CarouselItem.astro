---
const { title1, title2, desc, link, image, type } = Astro.props;

import TextDecor from "./TextDecor.astro";
---

<div class="hide carousel h-full w-full z-0">
    <div
        class="w-full h-full flex flex-col-reverse l:flex-row justify-between items-stretch"
    >
        <div
            class="w-full l:w-1/3 mx-auto self-center mt-12 l:mt-0 text-center l:text-left"
        >
            <div class="flex flex-col">
                <h1 class="title text-center l:text-left">{title1}</h1>
                <h1 class="title text-center l:text-left">
                    <TextDecor text={title2} color={type} />
                </h1>
            </div>
            <h4 class="mt-4">{desc}</h4>
            <!--
            {
                type === "lime" ? (
                    <button class="mt-12 button-lime w-1/3">Viac</button>
                ) : (
                    <button class="mt-12 button-purple w-1/3">Viac</button>
                )
            }
             -->
        </div>
        <div class="w-full l:w-1/3 mx-auto self-center">
            <img
                src={image}
                alt="illustration"
                class="w-3/4 mx-auto l:w-full"
            />
        </div>
    </div>
</div>
